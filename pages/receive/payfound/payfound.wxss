.goods-box{
    border-bottom:1rpx solid #cdcdcd;
    display:flex;
    justify-content: space-between;
    padding:50rpx 20rpx;
    box-sizing: border-box;
}
.goodsheigrh{
    max-height: 630rpx;
    overflow: hidden;
}
.seeheigth{
    max-height: none;
}
.goods-box:last-child{
    border: none;
}
image{
    width: 100%;
    height: 100%;
}
.goods_Img{
    flex-shrink: 0;
    width: 230rpx;
    height: 230rpx;
    padding:0 40rpx;
}
.goods_content{
    width:380rpx;
    flex-shrink:0;
}
.goods_name{
    font-size:32rpx;
    display:-webkit-box; 
    overflow:hidden; 
    -webkit-line-clamp:1;
    -webkit-box-orient:vertical;
    margin-bottom: 15rpx;
}
.goods_money,.goods_num{
    font-size:26rpx;
    color:#9d9d9d;
    margin-bottom: 15rpx;
}
.sun_money{
    color: #ff4342;
    font-size: 32rpx;
    font-weight:600;
}
.sun_money text{
    font-weight:400;
    font-size: 26rpx;
}
.mode_box{
    width:200rpx;
    height:45rpx;
    border:1rpx solid #ddd;
    text-align:center;
    color:#9d9d9d;
    font-size:24rpx;
    line-height:45rpx;
    margin:0 auto 30rpx;
}
.payfound_address{
    background:#D9E8FF;
    border-radius:50rpx 50rpx 0 0;
    padding: 35rpx  0;
    margin-bottom: 110rpx;
}
.payfound_address .iconfont{
    font-size:24rpx;
    color:#3B8BFE;
    margin-right: 15rpx;
}
.contact_way{
    padding:0 20rpx 20rpx;
    border-bottom:1rpx dashed #d9d9d9;
}
.contact_title{
    font-size: 32rpx;
    display:flex;
    align-items:center;
}
.contact_people{
    display:flex;
    justify-content: space-between;
    align-items:center;
    font-size:28rpx;
    color: #737172;
    padding-left: 40rpx;
}
.contact_add{
    font-size:26rpx;
    color: #737172;
    padding-left: 40rpx;
}
.found_box{
    padding: 20rpx 20rpx;
}
.found_title{
    font-size: 32rpx;
    display:flex;
    align-items:center;
}
.tips{
    color: #ff4342;
    margin-left: 10rpx;
}
.found_user{
    padding-left:40rpx;
    margin:20rpx auto 0;
    display: flex;
    align-items: center;
}
.user_list{
    display: flex;
    align-items: center;
}
.user_sel{
    width: 50rpx;
    height: 50rpx;
    margin-right:10rpx; 
    position: relative
}
.user_sel image{
    border-radius: 50%;
    border: 1rpx solid #777;
}
.user_sel:first-child::after{
    position: absolute;
    content: '团长';
    width: 55rpx;
    height: 25rpx;
    line-height: 25rpx;
    bottom: 0;
    color: #fff;
    font-size: 18rpx;
    background: #ff4342;
    left: -5rpx;
    text-align: center;
    border-radius:25rpx;
    padding: 0 5rpx; 
}
.user_sel:last-child{
    margin: 0;
}
.footer{
    position: fixed;
    bottom:0;
    width:100%;
    height:100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    box-sizing: border-box;
    box-shadow:0 0 25rpx #ccc;
    background: #fff;
}

.renshu{
    width:200rpx;
    font-size:24rpx;
    color:#777;
    flex-shrink: 0;
}
.renshu_num{
    font-size: 40rpx;
    color: #ff4342;
}
button::after{
    border: none;
}
.all_box{
    width: 500rpx;
    flex-shrink: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
}
.all_momey{
    display: flex;
    font-size: 24rpx;
    color: #777;
    align-items: center;
}
.jiaqian{
    font-size: 40rpx;
    color: #ff4342;

}
.fuhao{
    font-size:28rpx;
}
.btn{
    width: 225rpx;
    height: 80rpx;
    background: #3B8BFE;
}
.btn button{
    border-radius:5rpx; 
    background: #3B8BFE;
    color: #fff;
    font-size: 24rpx;
    line-height: 80rpx;
}