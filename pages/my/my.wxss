image{
    width: 100%;
    height: 100%;
}
.t-notice{
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin:  auto;
    background: rgba(0, 0, 0, .65);
    z-index: 9999
}
.tipsText{
    width:350rpx;
    height:60rpx;
    font-size:30rpx;
    color:#3b8bfe;
    background-color:#fff;
    position:absolute;
    top:150rpx;
    right:30rpx;
    line-height:60rpx;
    text-align:center;
    padding:0 20rpx;
    border-radius:40rpx;
    font-weight:600; 
}
.tipsText::after{
    position: absolute;
    top: -40rpx;
    content: "";
    width: 0;
    height: 0;
    border-style: solid;
    border-top-width:20rpx;
    border-left-width:15rpx;
    border-right-width:5rpx;
    border-bottom-width:20rpx;
    border-left-color:transparent; 
    border-top-color:transparent; 
    border-right-color:transparent; 
    border-bottom-color:#fff; 
    right: 30rpx;
}
.user_box{
    height: 350rpx;
    background-size: 100% 100%; 
    position: relative;
    text-align: center;
    overflow:hidden;
    padding: 50rpx 0;
    box-sizing: border-box;
}
.userName{
    width: 100%;
    font-size: 40rpx;
    color: #fff;
    margin-bottom:20rpx;
}
.useraddress{
    width: 100%;
    font-size: 26rpx;
    color: #fff;
}
.user-kefu-button{
    position: absolute;
    top: 50rpx;
    right: 0;
}
.user-kefu{
    display: flex;
    align-items:center;
    height:60rpx;
    border-radius:40rpx 0 0 40rpx;
    background: #fff;
    padding-right:10rpx;
}
.user-kefu .toolicon{
    margin-right:10rpx;
}
.user-kefu .tooltext{
    color:#5ea1fc;
    font-size:30rpx;
    font-weight:600;
}
.user_pic{
    height: 120rpx;
    width: 120rpx;
    border-radius:50%;
    margin:0 auto 30rpx; 
    border: 1rpx solid #fff;
    overflow: hidden;
}
.user_pic image{
    max-width: 100%;
    max-height: 100%;
}
.userFun{
    padding:0  20rpx;
}
.mytool,.tooltitle{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.toolicon{
    width:40rpx;
    height: 40rpx;
    border-radius:50%;
    text-align: center;
    line-height:40rpx; 
    margin-right:20rpx; 
}
.mytool{
    height: 100rpx;
    line-height: 100rpx;
    border-bottom:1rpx dashed #eee;
}
.tooltext{
    font-size: 30rpx;
}
.toolicon .iconfont{
    font-size: 30rpx;
    color:#3c8cff;
}

.shoppingCar{
    width: 70rpx;
    height: 70rpx;
    position:fixed;
    right: 20rpx;
    bottom: 35rpx;
    border-radius:50%; 
    background: -webkit-linear-gradient(top,#4291FD,#5398FF);
    box-shadow: 0 10rpx 20rpx #B7D2F8;
    text-align: center;
    line-height: 70rpx;
    color: #fff;
}
.shoppingCar .iconfont{
    font-size:45rpx;

}
.mytool button{
    margin:0;
    padding:0;
    background: #fff;
    color: #000;
}
.mytool button::after{
    border: none;
}