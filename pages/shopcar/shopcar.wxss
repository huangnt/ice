page{
    background: #f2f2f2;
}
.shopcar_box{
    margin-bottom:110rpx; 
}
.goodsList {
    width: 710rpx;
    height: 245rpx;
    box-shadow: 0 0 30rpx #d2d2d2;
    border-radius: 10rpx;
    background: #fff;
    margin: 30rpx auto 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.goods_box {
    width: 660rpx;
    height: 200rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.select_box{
    width: 45rpx;
    text-align: center;
    height:100%;
    line-height:200rpx;
}
.goodsImg {
    width: 185rpx;
    height: 185rpx;
    flex-shrink: 0;
}

.goodsImg image {
    max-width: 100%;
    max-height: 100%;
}
.goods_content{
    width:380rpx;
    height: 100%;
    position: relative;
    flex-shrink: 0;
}
.goods_name{
    font-size: 30rpx;   
    display:-webkit-box; 
    overflow:hidden; 
    -webkit-line-clamp:1;
    -webkit-box-orient:vertical;
}
.goods_momey{
    font-size: 28rpx;
    color: #999;
    margin: 10rpx auto;
}
.goods_fun{
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    bottom: 0;
    left: 0;
    font-size:30rpx; 
}
.addAndminus{
    width: 100%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
}
.addAndminus .iconfont{
    font-size:45rpx;
}
.goods_Num{
    display: inline-block;
    width: 45rpx;
    text-align: center;
    font-size: 28rpx;
}
.all_momey{
    flex-shrink: 0;
    color: #FB5B57;
    font-size: 26rpx;
}
.all_momey text{
    font-size: 30rpx;
    font-weight: 600;
}
.icon-add{
    background:#eeeeee;
    border-radius:50%;
}
#footer_box{
    width: 100%;
    height: 100rpx;
    background: #fff;
    box-shadow: 0 -5rpx 20rpx #eee;
    font-size: 30rpx;
    position: fixed;
    bottom: 0;
    left: 0;
}
#footer_box,.all_select,.footer_btn{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.gooslistNum{
    margin-left:10rpx;
    color: #727272;
    font-size: 28rpx; 
}
.all_select{
    margin-left:20rpx; 
}
.footer_btn{
    margin-right:20rpx; 
}
.all_goodsListMomey{
    color: #727272;
    margin-right:20rpx; 
}
.all_goodsListMomey text{
    color: #ff5353;
}
button::after{
    border: none;
    border-radius:0; 
}
.pay{
    background: #ff5353;
    color: #fff;
    margin-right:20rpx; 
    font-size:28rpx;
    border-radius:0; 
}
.launch{
    background: #3B8BFE;
    color: #fff;
    font-size:28rpx;
    border-radius:0; 
}