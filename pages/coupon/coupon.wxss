.coupon_box{
    width: 710rpx;
    height:750rpx;
    margin: 20rpx auto 0;
    position: relative;
}
.topImg{
    width: 100%;
    height: 750rpx;
    position: relative;
}
.topImg image{
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
}

.lable{
    color: #fff;
    text-align: center;
    font-size: 50rpx;
    padding-top:500rpx; 
}
.explain{
    width:300rpx;
    height:50rpx;
    color:#fff;
    text-align:center;
    font-size:32rpx;
    position:absolute;
    left:0;
    right:0;
    margin:0 auto;
    top:430rpx;
}
.explain view{
    position: relative;
    width: 300rpx;
    height: 50rpx;
}
.explain image{
    width: 100%;
    height: 100%;
}
button::after{
    border: none;
}
.click_btn{
    color: #f9345c;
    height: 80rpx;
    width: 240rpx;
    background: #fff;
    border-radius:80rpx;
    font-size: 32rpx;
    line-height: 80rpx; 
    margin-top:20rpx; 
}
.center_box{
    background: -webkit-linear-gradient(left top ,#F64B5E,#FC225C);
    width: 710rpx;
    margin: 0 auto;
    box-sizing: border-box;
    color: #fff;
    padding:0 40rpx 30rpx;
    border-radius:0 0 20rpx 20rpx;
}
.show_coupon_people{
    padding: 25rpx 0;
    font-size: 28rpx;
}
.user_list_coupon,.user_information{
    display: flex;
    align-items: center;
    font-size: 28rpx;
}
.user_list_coupon{
    justify-content: space-between;
    margin-bottom:20rpx;
}
.user_information{
    width: 350rpx;
    height: 90rpx;
}
.user_img{
    width: 90rpx;
    height: 90rpx;
    margin-right:20rpx; 
}
.user_img image{
    width: 100%;
    height: 100%;
}
.center_tips{
    margin: 30rpx 0 10rpx;
    text-align: center;
    font-size: 28rpx;
    position: relative;
}
.center_tips::before{
    position: absolute;
    content: "";
    width: 6em;
    height: 0;
    border-top:1rpx dashed #fff; 
    left: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}
.center_tips::after{
    position: absolute;
    content: "";
    width: 6em;
    height: 0;
    border-top:1rpx dashed #fff; 
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}