.menu_box{
 display: flex;
 height: 80rpx;
 border-bottom:1rpx solid #eee;
}
.menu{
 flex: 1;
 font-size:30rpx;
 line-height: 80rpx;
 text-align: center;
}
.borders{
 color: #f00;
 position: relative;
}
.borders::after{
    position: absolute;
    content: "";
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 2em;
    height: 4rpx;
    background: #f00;
}
.tab{
    background: #fff;
    width: 710rpx;
    margin: 35rpx auto 0; 
}

.coupon_list{
    width: 100%;
    height: 220rpx;
    position: relative;
    margin-bottom:20rpx;
}
.coupon_list image{
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 0;
}
.left_box,.rigth_box{
    z-index: 1;
    position: absolute;
    color: #fff;
}
.left_box{
   
    width: 395rpx;
    height: 165rpx;
    border: 1rpx solid #fff;
    left:40rpx;
    bottom:25rpx;
}
.conten_box{
    text-align: center;
}
.conten_title{
    font-size: 40rpx;
    margin-top: 25rpx;
    margin-bottom:25rpx;
}
.use_date{
 font-size: 24rpx;
}
.rigth_box{
    right: 0;
    top: 0;
    width: 215rpx;
    height: 100%;
}
.conten_box{
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
}
.worth{
    margin-top:60rpx;
    margin-right:30rpx;
}
.fuhao{
    font-size: 30rpx;
}
.worth_money{
    font-size: 80rpx;
}
.arrive{
    font-size: 24rpx;
}
.arrivetext{
    position: absolute;
    transform: rotate(45deg);
    top:20rpx;
    right:0;
    font-size:24rpx;
}
.tips{
    color: #9d9d9d;
    text-align: center;
    margin: 35rpx auto;
    font-size: 28rpx;
    position: relative;
}
.tips::before{
    content: "";
    position: absolute;
    left: 2em;
    width: 5em;
    height: 1rpx;
    background: #ccc;
    top: 0;
    bottom: 0;
    margin: auto;
}
.tips::after{
    content: "";
    position: absolute;
    right: 2em;
    width: 5em;
    height: 1rpx;
    background: #ccc;
    top: 0;
    bottom: 0;
    margin: auto;
}