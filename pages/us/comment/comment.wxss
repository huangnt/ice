/* pages/us/comment/comment.wxss */
page{
    background: #f6f6f6;
}
image{
    width: 100%;
    height: 100%;
}
.comment_list_box{
    background: #fff;
    margin-top:20rpx;
    padding: 20rpx 0;
}
.comment_list_box:last-child{
    padding-bottom: 50rpx;
}
.comment-top-box,.comment-top{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.comment-top-box{
    width: 710rpx;
    margin: 0 auto;
    height: 80rpx;
}
.comment-top{
    width: 520rpx;
    height: 80rpx;
    font-size:32rpx;
    flex-shrink: 0;
}
.comment-top-img{
    width: 80rpx;
    height: 80rpx;
    flex-shrink: 0;
}

.comment-top-Name{
    width: 420rpx;
    flex-shrink: 0;
    display:-webkit-box; 
    overflow:hidden; 
    -webkit-line-clamp:1;
    -webkit-box-orient:vertical;
}
.score-box{
    width: 175rpx;
    flex-shrink: 0;
    display: flex;
    align-items: center;
}
.score-box .icon-xingxing{
    color: #ffc03a;
    font-size: 32rpx;
    margin-right:5rpx;
}
.comment-contem-text{
    text-indent: 2em;
    font-size: 24rpx;
    line-height: 2em;
    color: #9d9d9d ;
    width: 710rpx;
    margin: 20rpx auto 0;
}
.goods-picture{
    width: 710rpx;
    margin: 20rpx auto 0;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}
.goods-picture-list{
    width: 230rpx;
    height: 230rpx;
    margin: 10rpx .08em 0;
}
.goods-picture-fore{
    width:350rpx;
    height: 350rpx;
    margin-top:10rpx; 
}
.time{
    font-size: 28rpx;
    color: #9d9d9d;
    width: 710rpx ; 
    margin: 20rpx auto 0;
}